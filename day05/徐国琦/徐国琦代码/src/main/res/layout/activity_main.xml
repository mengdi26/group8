<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <androidx.appcompat.widget.SearchView
        android:layout_width="@dimen/dp_264"
        android:layout_height="@dimen/dp_39"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:queryHint="搜索诗人名字 诗歌关键字"
        android:layout_marginLeft="@dimen/dp_18"
        android:background="@drawable/select"
        android:id="@+id/sv"
        app:iconifiedByDefault="false"
        />
    <ImageView
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_22"
        app:layout_constraintLeft_toRightOf="@+id/sv"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/aaa"
        android:id="@+id/iva"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <ImageView
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@+id/iva"
        android:layout_marginLeft="@dimen/dp_18"
        android:src="@mipmap/bbb"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="@dimen/dp_339"
        android:layout_height="@dimen/dp_150"
        android:src="@mipmap/ccc"
        android:id="@+id/ivb"
        android:layout_marginTop="@dimen/dp_13"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sv"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_46"
        android:orientation="horizontal"
        android:id="@+id/lla"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivb"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_33">
        <ImageView
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_46"
        android:layout_weight="1"
        android:src="@mipmap/tj"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:src="@mipmap/fh"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:src="@mipmap/ph"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:src="@mipmap/sg"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_46"
            android:layout_weight="1"
            android:src="@mipmap/hy"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/lla"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/dp_14"
        android:id="@+id/llb"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dp_11"
            android:text="每日推荐"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dp_11"
            android:text="飞花令"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dp_11"
            android:text="诗歌社群"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dp_11"
            android:text="排行榜"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/dp_11"
            android:text="会员专区"/>
    </LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_21"
        app:layout_constraintTop_toBottomOf="@+id/llb"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="诗歌群PK"
        android:id="@+id/tva"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_19"
        android:textStyle="bold"
        android:textSize="@dimen/dp_18"/>
    <TextView
        android:layout_width="@dimen/dp_117"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintLeft_toRightOf="@+id/tva"
        app:layout_constraintTop_toBottomOf="@+id/llb"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_141"
        android:text="08-01日晚8:00开始"/>

    <ImageView
        android:layout_marginTop="@dimen/dp_21"
        android:layout_width="@dimen/dp_339"
        android:layout_height="@dimen/dp_169"
        android:id="@+id/ivc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tva"
        android:src="@mipmap/ddd"/>

    <Button
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintTop_toBottomOf="@id/ivc"
        android:text="丁香诗社"
        android:id="@+id/buta"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_37"
        android:background="@drawable/shop"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:layout_width="@dimen/dp_76"
        android:layout_height="@dimen/dp_30"
        app:layout_constraintLeft_toRightOf="@+id/buta"
        app:layout_constraintTop_toBottomOf="@+id/ivc"
        android:layout_marginTop="@dimen/dp_9"
        android:text="月季诗社"
        android:layout_marginLeft="@dimen/dp_135"
        android:background="@drawable/shopa"/>
    <TextView
        android:layout_width="@dimen/dp_134"
        android:layout_height="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_14"
        android:text="这两个诗社你更看好谁"
        android:id="@+id/tvb"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buta"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#f5f5f5"
            android:id="@+id/lv"
            android:layout_marginTop="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@+id/tvb"/>
        <TextView
            android:layout_width="@dimen/dp_120"
            android:textStyle="bold"
            android:layout_height="@dimen/dp_30"
            app:layout_constraintTop_toBottomOf="@+id/lv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/dp_17"
            android:text="荣誉诗人"
            android:layout_marginTop="@dimen/dp_30"
            android:textSize="@dimen/dp_25"/>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>