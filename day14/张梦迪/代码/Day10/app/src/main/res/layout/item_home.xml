<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_envelopePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/iv_envelopePic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_envelopePic"
        android:ellipsize="end"
        android:lines="3"
        app:layout_constraintBottom_toBottomOf="@id/iv_envelopePic"/>

    <CheckBox
        android:id="@+id/but_box"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/check"
        android:button="@null"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_20"/>

</androidx.constraintlayout.widget.ConstraintLayout>